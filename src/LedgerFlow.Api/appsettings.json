{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=ledgerflow;Username=ledgerflow;Password=ledgerflow"
  },
  "Redis": {
    "Host": "localhost:6379"
  },
  "Jwt": {
    "Issuer": "LedgerFlow",
    "Audience": "LedgerFlow.Api",
    "SigningKey": "ledgerflow-dev-signing-key-change-in-production-12345",
    "AccessTokenMinutes": 30
  },
  "Stripe": {
    "SecretKey": "",
    "WebhookSecret": ""
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}
